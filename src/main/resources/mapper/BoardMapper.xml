<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.surup.board.dao.BoardMapper">
    <!-- board DB Mapper -->
    <!-- 공통 SQL -->
    <sql id="searchCondition">
        <choose>
            <when test='category=="notice"'>
                AND category=#{category}
            </when>
            <when test='category=="faq"'>
                AND category=#{category}
            </when>
            <when test='category=="qna"'>
                AND category=#{category}
            </when>
            <when test='category=="free"'>
                AND category=#{category}
            </when>
            <otherwise>
                <!-- entire : 전체 검색 -->
            </otherwise>
        </choose>
        <choose>
            <when test='option=="TC"'>
                AND (title   LIKE concat('%', #{keyword}, '%')
                OR   content LIKE concat('%', #{keyword}, '%'))
            </when>
            <when test='option=="T"'>
                AND title LIKE concat('%', #{keyword}, '%')
            </when>
            <when test='option=="W"'>
                AND writer LIKE concat('%', #{keyword}, '%')
            </when>
            <otherwise>
                <!-- entire : 전체 검색 -->
            </otherwise>
        </choose>
    </sql>

    <!-- SELECT -->
    <select id="selectAll" resultType="BoardDto"> <!-- TEST -->
        SELECT *
        FROM board
    </select>

    <select id="count" parameterType="SearchCondition" resultType="int">
        SELECT count(*)
        FROM board
        WHERE true
        <include refid="searchCondition"/>
    </select>

    <select id="selectPage" parameterType="SearchCondition" resultType="BoardDto">
        SELECT *
        FROM board
        WHERE true
        <include refid="searchCondition"/>
        ORDER BY bno DESC
        limit #{pageSize}
        OFFSET #{offset};
    </select>

    <select id="selectOne" parameterType="int" resultType="BoardDto">
        SELECT *
        FROM board
        WHERE bno = #{bno}
    </select>


    <!-- INSERT -->
    <insert id="insert" parameterType="BoardDto">
        INSERT INTO board (title, content, writer, category)
        VALUES (#{title}, #{content}, #{writer}, #{category});
    </insert>


    <!-- DELETE -->
    <delete id="delete" parameterType="int">
        DELETE
        FROM board
        WHERE bno = #{bno}
    </delete>


    <!-- UPDATE -->
    <update id="update" parameterType="BoardDto">
        UPDATE board
        SET title = #{title}, content = #{content}, category = #{category}, up_date = now()
        WHERE bno = #{bno}
    </update>
</mapper>